<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#5b3f2c"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Member Name"
            android:textColor="#f3c34e"
            android:fontFamily="@font/pixel_game"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMemberAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R0.00"
            android:textColor="#f3c34e"
            android:fontFamily="@font/pixel_game"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnRemoveMember"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/pixel_button_danger"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Remove member"
            app:tint="#f3c34e" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
