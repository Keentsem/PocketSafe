<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/pixel_card_background"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Card Icon -->
    <ImageView
        android:id="@+id/imgCardType"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/visa"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp" />

    <!-- Card Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Visa Card"
            android:textColor="#5b3f2c"
            android:fontFamily="@font/pixel_game"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCardDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** 1234"
            android:textColor="#8b6f5c"
            android:fontFamily="@font/pixel_game"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Lock Overlay -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLockOverlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sprite_secure_lock"
            android:visibility="gone"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>
