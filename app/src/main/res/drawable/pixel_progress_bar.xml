<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (track) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#5b3f2c" /> <!-- Brown color from pixel-retro theme -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>

    <!-- Progress (pixelated) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <solid android:color="#f3c34e" /> <!-- Gold color from pixel-retro theme -->
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
                <!-- Create pixelated effect with dashed pattern -->
                <size android:height="10dp" />
            </shape>
        </clip>
    </item>
</layer-list>
